{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {},
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "exclude": ["dist", "cdk.out", "**/cdk.out"]
}
